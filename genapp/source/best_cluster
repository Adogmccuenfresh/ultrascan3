map     string  s - - best_best_na "best_best_na" "BEST: omit the area correction (default:unchecked) {this is actually a regularization, so it is not advised to check this!}"
map     string  s - - best_best_p "best_best_p" "BEST: perform a pre-averaged hydrodynamic interaction calculation (default:unchecked)"
